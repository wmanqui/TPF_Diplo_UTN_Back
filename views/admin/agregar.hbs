<div class="bg_info d-flex justify-content-center align-items-center vh-100">
  <div class="bg-black p-5 rounded-5 text-secondary shadow" style="width: 30rem">
    <div class="text-center fs-1 fw-bold">Nuevo</div>
      <div class="row">
        <form action="/admin/novedades/agregar" method="post" enctype='multipart/form-data'>
            <div class="input-group mt-4">
                <div class="col-sm-10">
                  <input type="text" class="form-control bg-light" id="inputTitulo" placeholder="Titulo" name="titulo" style="width: 24rem">
                </div>
            </div>
            <div class="input-group mt-1">
                <div class="col-sm-10">
                    <input type="text" class="form-control bg-light " id="inputSubtitulo" placeholder="Subtitulo" name="subtitulo" style="width: 24rem">
                </div>
            </div>
            <div class="input-group mt-1">
                <div class="col-sm-10">
                    <input type="text" class="form-control bg-light " id="inputCuerpo" placeholder="Cuerpo" name="cuerpo" style="width: 24rem">
                </div>
            </div>
            <div class="input-group mt-3">
                <div class="col-sm-10">
                    <label>Imagen: <input type="file" class="form-control bg-light " id="imagen" name="imagen" style="width: 24rem"/></label>
                </div>
            </div>
            <button type="submit" class="btn btn-info text-black w-100 mt-4 fw-semibold shadow-sm">Guardar</button>
            <div
            class="btn d-flex gap-2 justify-content-center border mt-3 shadow-sm" >
            </div>
        </form>
        {{#if error}}
            <p class="text-center text-danger">
              <h5>{{message}}</h5>
            </p>
        {{/if}}
      </div>
  </div>
</div>

